{
  "manifest_version": 3,
  "name": "ShieldGPT Context Scan",
  "version": "0.1.0",
  "description": "Right-click to scan selected text or links with ShieldGPT backend.",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8001/*",
    "http://127.0.0.1:8001/*"
  ],
  "background": { "service_worker": "background.js" }
}
